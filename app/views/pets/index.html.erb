<h1>Pets#index</h1>
<p>Find me in app/views/pets/index.html.erb</p>

<div class="cards">
  <% @pets.each do |pet|%>
    <div class="carde">
      <%= image_tag "pet_1.jpg" %>
      <div class="card-info">
        <h3 class="card-title">My name is <span><%= pet.name%></span>!</h3>
        <div class="justify-content-start d-flex">
          <div>
            <h4 class="card-name"><%= pet.title %></h4>
            <div class="card-type">- I'm a <strong><%= pet.pet_type %></strong></div>
            <div class="card-age">- I'm <strong><%= pet.age %></strong> years old</div>
            <div class="card-desc"><i>''<%= pet.description %>''</i></div>

          </div>
          <div>
            <div class="card-rate"><%= pet.rate %><%= fa_icon "solid dollar"%>/day</div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

