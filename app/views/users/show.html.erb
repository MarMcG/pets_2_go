<h1 class="text-center">Welcome to your profile page</h1>

<div class="container">
  <div class="profile">
  <%= cl_image_tag current_user.photo.key, class: "avatar-large"%>
    <div class="profile-infos">
      <h2>Profile name</h2>
      <h3><%= @username %></h3>
      <p>Small description with <strong>relevant info</strong> only.</p>
    </div>
  </div>

  <div class="bookings">
    <%= render 'shared/card', pets: @pets %>
  </div>
</div>
